{% extends 'base.html.twig' %}

{% block title %}ArticlesList{% endblock title %}


{% block main %}

    <main>
        <section class="row justify-around" id="categories">
            {% for category in categories %}
                <div style="background-color: {{ category.color}}"  class="card">
                    <h1>{{ category.title }}</h1>
                    <p>{{ category.color}}</p>
                </div>
            {% endfor %}
        </section>
    </main>
{% endblock main %}