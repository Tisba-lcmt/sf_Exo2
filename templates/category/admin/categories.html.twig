{% extends 'base.html.twig' %}

{% block title %}CategoriesList{% endblock title %}


{% block main %}

    <main>
        {# Bouton Add Category #}
        <a href="{{ path('admin_category_insert') }}">
            <button>Ajouter la catégorie</button>
        </a>

        <section class="row flex-wrap justify-center" id="categories">

            {% for category in categories %}

                <div style="background-color: {{ category.color}}"  class="card">

                    <a href="{{ path('category_show', {'id': category.id} ) }}">
                        <h1>{{ category.title }}</h1>
                    </a>

                    <div class="row flex justify-around relative" id="cud">

                        {# Bouton Modify Category #}
                        <a href="{{ path('admin_category_update', {'id': category.id} ) }}">
                            <button>Modifier la catégorie</button>
                        </a>

                        {# Bouton Delete Category #}
                        <a href="{{ path('admin_category_delete', {'id': category.id} ) }}">
                            <button id="myBtn">Supprimer la catégorie</button>
                        </a>

                    </div>

                </div>

            {% endfor %}

        </section>
    </main>
{% endblock main %}