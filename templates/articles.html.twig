{% extends 'base.html.twig' %}

{% block title %}ArticlesList{% endblock title %}


{% block main %}

<main>
    <section class="row flex-wrap justify-center" id="articles">
        {% for article in articles %}

            <div class="card relative">
                <a href="{{ path('article_show', {'id': article.id} ) }}">
                    <div class="imgArticles"><img src="{{ article.image }}" alt="Image" class="resp"></div>
                </a>
                <a href="{{ path('article_show', {'id': article.id} ) }}"><h1>{{ article.title }}</h1></a>

                {# Bouton Modify Article #}
                <a href="{{ path('article_static_update', {'id': article.id} ) }}">
                    <button class="absolute">Modifier l'article</button>
                </a>
            </div>

        {% endfor %}
    </section>

</main>
{% endblock main %}